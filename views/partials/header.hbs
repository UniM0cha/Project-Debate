          {{!-- <button type='button' class='btn-login' onclick="location.href='/profile'">프로필</button> --}}
        {{else}}
          <button type='button' class='btn-login' onclick="location.href='/auth'">로그인</button>
        {{/if}}
      </div>

      </div>
    </div>
